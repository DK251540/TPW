<Window x:Class="BilardApp.GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BilardApp.GUI.Views"
        xmlns:viewModels="clr-namespace:BilardApp.GUI.ViewModels"
        mc:Ignorable="d"
        Title="BilardApp" Height="400" Width="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBox Width="50" Text="{Binding BallCount, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
            <Button Content="Generuj kule" Command="{Binding GenerateBallsCommand}" />
        </StackPanel>

        <Canvas x:Name="GameCanvas"
            Grid.Row="1"
            Background="LightGray"
            SizeChanged="GameCanvas_SizeChanged">
            <ItemsControl ItemsSource="{Binding Balls}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding ScaledX}" />
                        <Setter Property="Canvas.Top" Value="{Binding ScaledY}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse Width="{Binding ScaledRadius}"
                             Height="{Binding ScaledRadius}"
                                 Fill="{Binding BallColor}"
                             Stroke="Black"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
    </Grid>
</Window>
